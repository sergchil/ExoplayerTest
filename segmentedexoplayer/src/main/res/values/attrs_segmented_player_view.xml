<resources>
    <declare-styleable name="SegmentedPlayerView">
        <attr name="progressColor" format="color|reference" />
        <attr name="progressBackgroundColor" format="color|reference" />
        <attr name="progressHeight" format="dimension" />
        <attr name="progressPaddingLeft" format="dimension" />
        <attr name="progressPaddingTop" format="dimension" />
        <attr name="progressPaddingRight" format="dimension" />
        <attr name="progressPaddingBottom" format="dimension" />
        <attr name="progressDividerPadding" format="dimension" />
        <attr name="progressCornerRadius" format="dimension" />
        <attr name="autoPlay" format="boolean" />

        <attr name="scale_mode" format="enum">
            <enum name="fit" value="0"/>
            <enum name="fixed_width" value="1"/>
            <enum name="fixed_height" value="2"/>
            <enum name="fill" value="3"/>
            <enum name="zoom" value="4"/>
        </attr>

    </declare-styleable>
</resources>
